<UserControl x:Class="MysteryWorld.Views.LevelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MysteryWorld.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FocusManager.FocusedElement="{Binding ElementName=drawCanvas}">

    <Canvas x:Name="drawCanvas" Background="Black" KeyDown="drawCanvas_KeyDown" KeyUp="drawCanvas_KeyUp" Focusable="True" />

</UserControl>
